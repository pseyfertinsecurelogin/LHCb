package          EventIndexer
version           v1r1

#=========================================================================
# Structure, i.e. directories to process.
#=========================================================================
branches         cmt doc src tests

#=========================================================================
# Used packages.
#============================================================================
use              GaudiAlg        v*
use              RecEvent        v*        Event
use              ROOT            v*        LCG_Interfaces
use              RELAX           v*        LCG_Interfaces -no_auto_imports

private
#=========================================================================
# Component library building rule
#=========================================================================
library          EventIndexer    ../src/*.cpp ../$(CMTCONFIG)/dict/EventIndexerDict.cpp -no_static
macro_append     EventIndexer_dependencies " EventIndexerDict "

#=========================================================================
# define component library link options
#=========================================================================
apply_pattern    component_library library=EventIndexer

apply_pattern    QMTest

include_dirs  $(EventIndexer_root)/src

macro EventIndexer_cintflags " $(includes) $(use_includes) "

document rootcint EventIndexerDict EventIndexer.h

end_private
