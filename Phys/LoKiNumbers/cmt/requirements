package            LoKiNumbers
version            v8r2
# ================ structure ==================================================
branches           cmt doc dict python 

# ================ dependencies ===============================================
use   LoKiCore     v*    Phys 
use   GaudiPython  v*    -no_auto_imports

# ================ own includes ===============================================
apply_pattern install_python_modules 


# ============== Produce LCG dictionary =======================================
apply_pattern    reflex_dictionary                                       \
                 dictionary=LoKiNumbers                                  \
                 headerfiles=$(LOKINUMBERSROOT)/dict/LoKiNumbersDict.h   \
                 selectionfile=$(LOKINUMBERSROOT)/dict/LoKiNumbers.xml   \  
                 options=" -U__MINGW32__ "

# ================ patterns ===================================================

macro LoKiNumbersDict_use_linkopts $(use_linkopts)

apply_pattern QMTest 

# Hack for Gaudi v21r1 to link dictionary on windows
private
set EXPORT_ALL_SYMBOLS "yes" GAUDI_V21 "" GAUDI_V22 "" G21_HIDE_SYMBOLS ""

