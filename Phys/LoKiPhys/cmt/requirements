package           LoKiPhys
version           v6r1
	
# =============== structure ==================================================
branches          cmt doc src dict python LoKi 

# =============== dependencies ===============================================
use               PhysEvent     v*    Event 
use               LoKiCore      v*    Phys 
use               DaVinciKernel v*    Phys 
	
# =============== own includes ===============================================
apply_pattern install_more_includes  more=LoKi
apply_pattern install_python_modules 

# =============== constituents ===============================================
library           LoKiPhys ../src/*.cpp 

# ============== Produce LCG dictionary =======================================
apply_pattern    reflex_dictionary                                   \
                 dictionary=LoKiPhys                                 \
                 headerfiles=$(LOKIPHYSROOT)/dict/LoKiPhysDict.h     \
                 selectionfile=$(LOKIPHYSROOT)/dict/LoKiPhys.xml     \  
                 options=" -U__MINGW32__ "

# =============== patterns ===================================================
apply_pattern     linker_library library=LoKiPhys

macro LoKiPhysDict_use_linkopts $(use_linkopts)

# ============================================================================
# The END 
# ============================================================================
