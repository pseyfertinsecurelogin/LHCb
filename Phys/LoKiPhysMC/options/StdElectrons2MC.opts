/** @file
 *
 *  Configuration file to build the MC-relation tables for some standard pions 
 *
 *  Essentially it transate the information from Linker tables into 
 *  usable form of Relation tables
 *
 *  @attention For "Links" associations, the native LoKi way of making 
 *  relations is MUCH MORE EFFICIENT
 *
 *  @see Kernel/Particle2MC.h
 *  @see LoKi_P2MC 
 *  @see LoKi_P2MCW 
 *
 *  @author Vanya BELYAEV ibelyaev@physics.syr.edu
 *  @date 2007-02-23
 */
// ============================================================================
#include "$DAVINCIASSOCIATORSROOT/options/DaVinciAssociators.opts"
// ============================================================================
ApplicationMgr.DLLs   += { "LoKiCore" , "LoKiPhysMC" } ;
ApplicationMgr.ExtSvc += { "LoKiSvc"  } ;
// ============================================================================
// Deal with standard pions 
// ============================================================================
#include "$COMMONPARTICLESROOT/options/StandardElectrons.opts"
// ============================================================================
// Instrument Data-On-Demand Service
// ============================================================================
DataOnDemandSvc.AlgMap +=  {
  // Relation table for all standard pions  CHI2 
  "Relations/Phys/StdElectrons/Chi2"     : "LoKi_P2MC/StdElectrons2MCChi2"      ,
  // Relation table for all standard pions  LINKS 
  "Relations/Phys/StdElectrons/Links"    : "LoKi_P2MC/StdElectrons2MCLinks"     ,
  // Relation table for all standard pions  WITHCHI2 
  "Relations/Phys/StdElectrons/WithChi2" : "LoKi_P2MCW/StdElectrons2MCWithChi2" 
} ;
// ============================================================================
// Relation table for all standard pions  CHI2 
// ============================================================================
StdElectrons2MCChi2.Inputs =  { 
  //"Phys/StdNoPIDsElectrons"        , 
  "Phys/StdLooseElectrons"           ,
  "Phys/StdTightElectrons"
} ;
StdElectrons2MCChi2.Method = @Particle2MCMethod.Chi2        ;
StdElectrons2MCChi2.Output = "Relations/Phys/StdElectrons/Chi2" ;
// ============================================================================
// Relation table for all standard pions  CHI2 
// ============================================================================
StdElectrons2MCLinks.Inputs =  { 
  //"Phys/StdNoPIDsElectrons"        , 
  "Phys/StdLooseElectrons"           ,
  "Phys/StdTightElectrons"
} ;
StdElectrons2MCLinks.Method = @Particle2MCMethod.Links        ;
StdElectrons2MCLinks.Output = "Relations/Phys/StdElectrons/Links" ;
// ============================================================================
// Relation table for all standard pions  WITHCHI2 
// ============================================================================
StdElectrons2MCWithChi2.Inputs =  { 
  //"Phys/StdNoPIDsElectrons"        , 
  "Phys/StdLooseElectrons"           ,
  "Phys/StdTightElectrons"
} ;
StdElectrons2MCWithChi2.Method = @Particle2MCMethod.WithChi2        ;
StdElectrons2MCWithChi2.Output = "Relations/Phys/StdElectrons/WithChi2" ;
// ============================================================================


