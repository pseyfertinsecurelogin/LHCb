#ifndef      DETDESC_ELEMENT_ICPP
#define      DETDESC_ELEMENT_ICPP 1 
/// DetDesc
#include "DetDesc/Element.h"
#include "DetDesc/Isotope.h"
#include "GaudiKernel/SystemOfUnits.h"

/////////////////////////////////////////////////////////////////////////////////
inline const int    Element::nOfIsotopes() const { return isotopes().size(); }
/////////////////////////////////////////////////////////////////////////////////
inline const double Element::coulombFactor() const { return m_coulomb; }
/////////////////////////////////////////////////////////////////////////////////
inline const double Element::tsaiFactor   () const { return m_tsai; }
/////////////////////////////////////////////////////////////////////////////////
inline const double Element::A() const { return m_Aeff; }
/////////////////////////////////////////////////////////////////////////////////
inline void         Element::setA( const double value ) { m_Aeff = value; }
/////////////////////////////////////////////////////////////////////////////////
inline const double Element::Z() const { return m_Zeff; }
/////////////////////////////////////////////////////////////////////////////////
inline void         Element::setZ( const double value ) { m_Zeff = value; }
/////////////////////////////////////////////////////////////////////////////////
inline const double Element::N() const { return m_Aeff*Gaudi::Units::mole/Gaudi::Units::g; }
/////////////////////////////////////////////////////////////////////////////////
inline const Element::Isotopes& Element::isotopes () const { return m_isotopes; }
/////////////////////////////////////////////////////////////////////////////////
inline       Element::Isotopes& Element::isotopes ()       { return m_isotopes; }
/////////////////////////////////////////////////////////////////////////////////

#endif  //   DETDESC_ELEMENT_ICPP














