# $Id: requirements,v 1.126 2009-12-05 14:25:46 dgolubko Exp $ 
# =============================================================================
package       DetDesc
version       v18r18

# =========== structure =======================================================
branches      DetDesc doc cmt src

# =========== dependencies ====================================================
use           GaudiKernel       v*
use           ROOT              v* LCG_Interfaces
##use           GSL               v* LCG_Interfaces -no_auto_imports
use           HistoStrings      v* Kernel

# =========== own includes ====================================================
apply_pattern install_more_includes more=DetDesc

# =========== constituents ====================================================
library       DetDescLib        Lib/*.cpp 

# =========== standard patterns (the order is essential!) =====================
apply_pattern linker_library    library=DetDescLib 

# =============== LCG Dictionaries ============================================
apply_pattern     reflex_dictionary                                 \
                  dictionary=DetDesc                                \
                  headerfiles=$(DETDESCROOT)/dict/DetDescDict.h     \
                  selectionfile=$(DETDESCROOT)/dict/DetDescDict.xml \
                  options="-U__MINGW32__"

macro_append ROOT_linkopts " -lMathCore -lGenVector " \
             WIN32 " libMathCore.lib libGenVector.lib "

