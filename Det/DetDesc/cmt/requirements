# =============================================================================
package       DetDesc
version       v16r9

# =========== structure =======================================================
branches      DetDesc doc cmt src

# =========== own includes ====================================================
include_dirs  $(DETDESCROOT)

# =========== dependencies ====================================================
use           GaudiKernel       v*
use           LHCbDefinitions   v* Kernel

# =========== constituents ====================================================
library       DetDescLib        Lib/*.cpp

# =========== standard patterns (the order is essential!) =====================
apply_pattern linker_library    library=DetDescLib 
macro_append DetDesc_linkopts "" \
                        WIN32 "/include:_DetDesc_loadRef"
