#============================================================================
package           Magnet
version           v3r1

branches          cmt doc src 

use LHCbKernel  v*      Kernel
use GaudiAlg    v*      -no_auto_imports

library          Magnet    ../src/*.cpp -import=GaudiAlg

apply_pattern component_library library=Magnet

#================== Test application ============
private
use GaudiConf 	v*	-no_auto_imports
application TestMagnet $(GAUDICONFROOT)/src/GaudiMain.cpp

# To run application, source setup.csh -tag=check
macro useGaudiSvc  "" check " GaudiSvc  v* -no_auto_imports"
macro useRootHist  "" check " RootHistCnv  v* -no_auto_imports"
macro useFieldMap  "" check " FieldMap  v* -no_auto_imports"

use ${useGaudiSvc}
use ${useRootHist}
use ${useFieldMap}

# Hack to get the right LD_LIBRARY_PATH when using tag=check
set BINDIR "$(CMTCONFIG)"
apply_pattern ld_library_path
