# =========================================================================
package           VLDet 
version           v1r1

# =============== structure ===============================================	
branches         src cmt doc VLDet dict

# =============== used packages ===========================================
use DetDesc     v*    Det
use DetDescCnv  v*    Det
use LHCbKernel  v*    Kernel
use LHCbMath    v*    Kernel
use GaudiAlg    v*
use GSL         v*    LCG_Interfaces
use Boost       v*    LCG_Interfaces

macro_append Boost_linkopts " $(Boost_linkopts_regex) "

# =============== own includes ============================================
apply_pattern install_more_includes more=VLDet

# =============== link library (base classes) =============================
library          VLDetLib        Lib/*.cpp

# =============== component library =======================================
library          VLDet           component/*.cpp

#================ patterns ================================================
apply_pattern component_library library=VLDet
apply_pattern linker_library    library=VLDetLib

# =============== LCG Dictionaries ============================================
apply_pattern     reflex_dictionary                             \
                  dictionary=VLDet                              \
                  headerfiles=$(VLDETROOT)/dict/VLDetDict.h     \
                  selectionfile=$(VLDETROOT)/dict/VLDetDict.xml \
                  options="-U__MINGW32__"
# Disable some compiler warnings in the automatically generated dict code
macro_append VLDetDict_cppflags "" \
             target-icc " -wd654"

