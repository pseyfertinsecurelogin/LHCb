package MuonDAQ
version v3r3

# ================ structure ===========================================
branches src MuonDAQ cmt doc

# ================ used packages ========================================= 
use MuonKernel  v*    Muon
use MuonDet     v*    Det
use DigiEvent   v*    Event	
use DAQEvent    v*    Event
use RecEvent    v*    Event
use GaudiAlg    v*

apply_pattern install_more_includes more=MuonDAQ

# build a component library
library MuonDAQ  *.cpp
apply_pattern component_library library=MuonDAQ

#============================================================================
# LCG Dictionaries
#============================================================================
apply_pattern reflex_dictionary                                    \
              dictionary=MuonDAQ                                   \
              headerfiles=$(MUONDAQROOT)/dict/MuonDAQDict.h        \
              selectionfile=$(MUONDAQROOT)/dict/MuonDAQDict.xml    \
              options="-U__MINGW32__ -DBOOST_DISABLE_ASSERTS"
# Hack for cmt v1r19 bug to link dictionary on windows
macro MuonDAQDict_use_linkopts $(use_linkopts)
