#============================================================================
# Created    : 2005-02-07
# Maintainer : Olivier Callot
#============================================================================
package           PackedEvent
version           v3r5p1

#============================================================================
# Structure, i.e. directories to process. 
#============================================================================
branches          cmt doc Event dict

#============================================================================
# Used packages. Specify the version, * at the end specifies 'any revision'
#    Put as many lines as needed, with all packages, without the '#'
#============================================================================
use	GaudiKernel     v*

apply_pattern install_more_includes more=Event

#============================================================================ 
# Produce lcg dictionary
# for stl containers used in PackedEvent
#============================================================================ 
apply_pattern reflex_dictionary \
                  dictionary=PackedEvent \
                  headerfiles=$(PACKEDEVENTROOT)/dict/PackedEventDict.h     \
                  selectionfile=$(PACKEDEVENTROOT)/dict/PackedEventDict.xml \
                  imports=ROOT


# Hack for Gaudi v21r1 to link dictionary on windows
private
set EXPORT_ALL_SYMBOLS "yes" GAUDI_V21 "" GAUDI_V22 "" G21_HIDE_SYMBOLS ""
