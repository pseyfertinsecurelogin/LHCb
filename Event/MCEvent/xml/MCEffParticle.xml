<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE gdd SYSTEM "gdd.dtd" >
<gdd>
  <package name='MCEvent'>
<!-- ****************************************************************
     * MCEffParticle                                                *
     ****************************************************************-->
     <class
       name="MCEffParticle"
       author="Christian Jacoby"
       desc="Access to MC particle information for efficiency algorithms"
       serializers = "FALSE"
      >
      &StlVector;
      
      <import name="Event/MCParticle"/>
     
      <relation
            name="mcStable"
            type="LHCb::MCParticle"
            desc="stable MC particle"
      />

      <attribute
            name="recble"
            desc="reconstructible flag (0=not rec'ble, 1=long 2=TTT, 3=VTT, 4=neutral)"
            type="int"
      />

      <attribute
             name="rected"
             desc="reconstructed flag (0=not rec'ted, 1=long, 2=TTT, 3=VTT, 4=neutral)"
             type="int"
       />

     </class>
  </package>
</gdd>
