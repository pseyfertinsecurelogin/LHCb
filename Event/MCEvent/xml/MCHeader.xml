<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE gdd SYSTEM "gdd.dtd" >
<gdd>
  <package name='MCEvent'>
<!-- ****************************************************************
     * MCHeader                                                     *
     ****************************************************************-->
     <class 
      author="P. Koppenburg, revised by G.Corti"
      desc="Header for simulation information"
      name="MCHeader"
      location="MC/Header"
      id="104"
     >
       &DataObject;
       <base name="ProcessHeader"/>
       <import name="Event/ProcessHeader"/>
       <import name="MCVertex" soft="TRUE"/>
       <attribute
        desc="Event number"
        name="evtNumber"
        type="longlong"
        init="0"
       />
       <attribute
        desc="Event time"
        name="evtTime"
        type="ulonglong"
        init="0"
       />
       <relation
        desc="Pointer to primary vertices"
        multiplicity="N"
        name="primaryVertices"
        type="LHCb::MCVertex"
       />
     </class>
  </package>
</gdd>
