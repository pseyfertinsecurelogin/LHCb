<?xml version='1.0' encoding='UTF-8'?>
<!DOCTYPE gdd SYSTEM 'gdd.dtd'>
<gdd>
  <package name='MCEvent'>

    <class author="Matthew Needham" desc="This class turns represents charge deposited on a strip by a single MCHit" id="9001" name="MCUTDeposit">
      <base name="KeyedObject&lt;int&gt;"/>
      &KeyedObject;
      <location name="UTDeposits"   place="MC/UT/Deposits"   />

      <import name ="Kernel/UTChannelID"/>
      <import name="Event/MCHit" /> 
       <constructor argList="double charge, LHCb::UTChannelID aChan, LHCb::MCHit* aHit" 
                    initList="m_depositedCharge(charge), m_channelID(aChan), m_mcHit(aHit)"  desc="special constructor">
        <code></code>
      </constructor>
      <attribute name="depositedCharge" type="double" setMeth = "FALSE" desc="charge deposited on strip"/>
      <relation name="mcHit" type="LHCb::MCHit" desc="pointer to MCHit"/>
      <attribute name="channelID" type="LHCb::UTChannelID" setMeth = "FALSE" desc="channelID"/>
    </class>

 </package>
</gdd>
