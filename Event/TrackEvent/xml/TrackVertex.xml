<!DOCTYPE gdd SYSTEM "gdd.dtd" >
<gdd>
  <package name="TrackEvent">

    <import name="Event/Track"/>
    <import name="Kernel/Point3DTypes.h"/>
    <import name="Kernel/Vector3DTypes.h"/>

<!--- Vertex, just a variant of the offline one -->

    <class 
      author           = "Olivier Callot" 
      desc             = "Track Vertex" 
      id               = "10020" 
      name             = "TrackVertex" 
      stdVectorTypeDef   = "TRUE" 
      keyedContTypeDef = "TRUE" >

      <base name="KeyedObject&lt;int&gt;"/>
      &KeyedObject;
      <import name="GaudiKernel/SystemOfUnits"/>

      <location name="Velo2D"    place="Rec/Trig/Vertex2D"     />
      <location name="Velo3D"    place="Rec/Trig/Vertex3D"     />
      <location name="Primary"   place="Rec/Vertex/Primary"    />

      <constructor
        argList="int key"
        desc="create a vertex with a selected key" 
        initList = "KeyedObject &lt;int&gt;( key )" >
        <code>
          m_position = Gaudi::XYZPoint(0.0, 0.0, -1*Gaudi::Units::km);
          m_positionErr = Gaudi::SymMatrix3x3();
       </code>
       </constructor>
 
       <attribute
        name="position"
        desc="Position in LHCb reference system"
        type="Gaudi::XYZPoint"
       />
       <attribute
        name="positionErr"
        desc="Covariance matrix containing errors on vertex position"
        type="Gaudi::SymMatrix3x3"
       />
      
       <attribute
        name="chi2"
        desc="chi2 of the vertex fit"
        type="double"
       />
      
       <attribute
        name="nDoF"
        desc="Degree of freedom of the vertex fit"
        type="int"
       />
      
      <relation
        type      = "LHCb::Track"
        name      = "tracks"
        desc      = "Tracks this vertex was made from" 
        multiplicity = "N" />

    </class>
  </package>
</gdd>
