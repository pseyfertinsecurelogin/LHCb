package           L0Event
version           v15r2
#============================================================================
# This template is an example for a standard Algorithm package
#
# Structure, i.e. directories to process. 
#============================================================================
branches          cmt doc Event xml src
include_dirs      $(L0EVENTROOT)
#============================================================================
# Used packages. Specify the version, * at the end specifies 'any revision'
#    Put as many lines as needed, with all packages, without the '#'
#============================================================================
use     LHCbKernel      v*      Kernel
use     LHCbDefinitions v*      Kernel
use     Boost           v*      LCG_Interfaces

#============================================================================
#---- Produce Header-Files from XML description
private
document obj2doth L0EventObj2Doth ../xml/*.xml
document obj2dict L0EventObj2Dict ../xml/*.xml

public
library          L0Event         ../src/*.cpp
library          L0EventDict     ../$(tag)/dict/L0Event/*.cpp

#============================================================================
# define library link options
#============================================================================
apply_pattern component_library library=L0EventDict
apply_pattern linker_library	library=L0Event

private
use GaudiObjDesc v* -no_auto_imports