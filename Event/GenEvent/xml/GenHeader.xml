<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE gdd SYSTEM "gdd.dtd" >
<gdd>
  <package name='GenEvent'>
<!-- ****************************************************************
     * GenHeader                                                    *
     ****************************************************************-->
     <class 
      author="Marco Cattaneo, revised by P. Koppenburg, then G.Corti"
      desc="Header for event generator information"
      name="GenHeader"
      location="Gen/Header"
      id="102"
     >
       &DataObject;
       <base name="ProcessHeader"/>
       <import name="Event/ProcessHeader"/>
       <import name="GenCollision" soft="TRUE"/>
        <attribute
        desc="Instantaneous luminosity used for pileUp probability"
        name="luminosity"
        type="double"
        init="0.0"
       />
       <attribute
        desc='LHCb event type. Code used in BookKeeping to identify samples, as defined in &lt;a href="http://cdsweb.cern.ch/record-restricted/855452/"&gt;LHCb-2005-034&lt;/a&gt;'
        name="evType"
        type="int"
        init="0"
       />
       <attribute
        desc="Event number"
        name="evtNumber"
        type="longlong"
        init="0"
       />
       <relation
        desc="Pointer to collisions in this event"
        multiplicity="N"
        name="collisions"
        type="LHCb::GenCollision"
       />
       <attribute
        desc="Total cross section used for pileUp probability"
        name="totCrossSection"
        type="double"
        init="0.0"
       />
       <attribute
        desc="Filled-filled bunches crossing frequency"
        name="crossingFreq"
        type="double"
        init="0.0"
       />
       <method
        const="TRUE"
        desc="Number of collisions in bunch crossing"
        name="numOfCollisions"
        type="unsigned int"
       >
	<code>
	  return collisions().size();
        </code>
       </method>
     </class>
  </package>
</gdd>
