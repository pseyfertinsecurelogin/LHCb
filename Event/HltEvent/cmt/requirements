package           HltEvent
version           v8r0p1

# Structure, i.e. directories to process. 
#============================================================================
branches          cmt doc Event xml

# Used packages
#============================================================================
use   TrackEvent      v*    Event
use   RecEvent        v*    Event
use   PhysEvent       v*    Event
use   GaudiKernel     v*

#============================================================================
#---- Produce Header-Files from XML description
document obj2doth HltEventObj2Doth ../xml/*.xml
apply_pattern install_more_includes more=Event 

document obj2dict HltEventObj2Dict ../xml/*.xml

library          HltEventDict     ../$(tag)/dict/HltEvent/*.cpp
apply_pattern component_library library=HltEventDict
macro_remove constituents HltEventDictRootMap

private
use GaudiObjDesc v* -no_auto_imports

