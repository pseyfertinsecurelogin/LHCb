<?xml version='1.0' encoding='UTF-8'?>
<!DOCTYPE gdd SYSTEM "gdd.dtd" > 
<gdd>
 <package name="DigiEvent">
  <class
   author="Marcin Kucharczyk"
   desc="This class represents VeloPix cluster of pixel hits"
   id="4504"
   name="VeloPixCluster">
   <location name="VeloPixClusterLocation"   place="Raw/VeloPix/Clusters"   />
   <import name="Kernel/VeloPixChannelID"/>
   <import name="Event/VeloPixLiteCluster"/>
   <template name="KeyedObjectDict" t1="LHCb::VeloPixChannelID"/>
   <base name="KeyedObject&lt;LHCb::VeloPixChannelID&gt;"/>
   &KeyedContainer;
   <import name="vector" std="TRUE"/>

   <constructor desc="Constructor with lite cluster"
       argList='VeloPixLiteCluster lCluster,
                std::vector &lt; std::pair&lt;LHCb::VeloPixChannelID,int&gt; &gt; pixelHitVec'
       initList='m_lCluster(lCluster),
                 m_pixelHitVec(pixelHitVec)' >
   </constructor>

   <constructor desc="Constructor without lite cluster"
       argList='std::vector &lt; std::pair&lt;LHCb::VeloPixChannelID,int&gt; &gt; pixelHitVec'
       initList='m_lCluster(),
                 m_pixelHitVec(pixelHitVec)' >
   </constructor>

  <constructor desc = 'copy constructor'
      initList = "KeyedObject&lt;LHCb::VeloPixChannelID&gt;(),m_lCluster(cluster.m_lCluster),
                                                              m_pixelHitVec(cluster.m_pixelHitVec)" >
      <arg const = 'TRUE' name = "cluster" type = "LHCb::VeloPixCluster" />
  </constructor>

   <method desc= 'clone method'
    name = 'clone'
    const = 'TRUE'
    type = "LHCb::VeloPixCluster*"
    access = "PUBLIC">
    <code>
      return new LHCb::VeloPixCluster( *this );
    </code>
   </method>

   <attribute name="lCluster" type="LHCb::VeloPixLiteCluster" desc="lite cluster"/>
   <attribute name="pixelHitVec" type="std::vector &lt; std::pair&lt;LHCb::VeloPixChannelID,int&gt; &gt;" desc="vector of pairs(channelID,ToT)"/>
   <method type='LHCb::VeloPixChannelID' name='channelID' const='TRUE' desc='channel = key'>
    <code>return key();</code>
   </method>

   <method                                                                                                                                
     name = "fillStream"                                                                                                                  
     desc = "Print the cluster key = channelID"                                                                                           
     type = "std::ostream&amp;"                                                                                                           
     virtual = "FALSE"                                                                                                                    
     const = "TRUE">
     <arg type = "std::ostream"                                                                                                           
      name = "s" />
      <code >
       s &lt;&lt; "{VeloPixCluster's key: " &lt;&lt; (int) key() &lt;&lt; " }";
      return s;
     </code>
  </method>

  </class>
 </package>
</gdd>
