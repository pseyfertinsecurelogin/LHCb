<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE gdd SYSTEM "gdd.dtd" >

<gdd>

  <package name="RecEvent">
<!-- ****************************************************************
     * SelResult                                                    *
     ****************************************************************-->
    <class
      author="G.Corti"
      desc="Store a summary result of a decay channel selection, including where in the TES the data has been put"
      name="SelResult"
      id="860"
      >
      <base name="KeyedObject&lt;int&gt;"/>
      &KeyedObject;

      <location
        name="Default"
        place="Phys/Selections"
        />


      <constructor
        argList="const SelResult&amp; rhs"
        desc="Copy constructor"
        initList="KeyedObject&lt;int&gt;(), m_location(rhs.m_location), m_decay(rhs.m_decay), m_found(rhs.m_found)"
        />

      <method
        name="operator="
        desc="Assignment operator"
        type="LHCb::SelResult&amp;"
        >
        <arg name="rhs" type="SelResult" const='TRUE'/>
        <code>
          if (this != &amp;rhs) {
             m_location = rhs.m_location;
             m_decay    = rhs.m_decay;
             m_found    = rhs.m_found;
          }
          return *this;
        </code>
      </method>


      <attribute
        name="location"
        desc="Location in the TES where the specific decay selection has stored its results, identical to name of algorithm producing the results"
        type="std::string"
        />
      
      <attribute
        name="decay"
        desc="Decay descriptor describing the full decay chain with same syntax as used by DecayFinder tool"
        type="std::string"
        />

      <attribute
        name="found"
        desc="Logical flag set to true is the selection has found good candidate(s) in the event"
        type="bool"
        />

    </class>

  </package>

</gdd>
