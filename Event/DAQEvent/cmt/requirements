package DAQEvent
version v7r19

use GaudiKernel v*
branches cmt doc Event src tests xml
private
  use GaudiAlg     v*      -no_auto_imports
  use GaudiObjDesc v*      -no_auto_imports  
end_private

# Produce Header-Files from XML description
#============================================================================
apply_pattern god_headers files=../xml/*.xml
apply_pattern install_more_includes more=Event



# ==================== Produce LCG dictionary ===============================
macro DAQEventGen_dependencies DAQEventObj2Doth
apply_pattern     reflex_dictionary                            \
                  dictionary=DAQEvent                               \
                  headerfiles=$(DAQEVENTROOT)/xml/lcgdict/lcg_headers.h     \
                  selectionfile=$(DAQEVENTROOT)/xml/lcgdict/lcg_selection.xml \
                  options=--comments

# ==================== linker library =======================================
macro DAQEventLib_dependencies DAQEventObj2Doth
library DAQEventLib     *.cpp 

# ==================== component libraries ==================================
library DAQEvent  component/*.cpp -import=GaudiAlg 

# ==================== Standard patterns (order is important!) ==============
apply_pattern component_library library=DAQEvent 
apply_pattern linker_library    library=DAQEventLib

macro_append ROOT_linkopts " -lHist " \
                     WIN32 " libHist.lib "\
                                

# Set up the test application with packages needed at run time
private
  use GaudiSvc    v*      -no_auto_imports
  apply_pattern QMTest
end_private
