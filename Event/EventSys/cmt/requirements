package EventSys
version v24r0

branches doc cmt

# LHCb Event libraries

use EventBase   v2r4    Event
use MCEvent     v2r6    Event
use DigiEvent   v2r3    Event
use RecEvent    v2r9    Event
use L0Event     v16r7   Event
use PhysEvent   v11r5   Event
use DAQEvent    v7r8    Event
use GenEvent    v5r1    Event
use EventAssoc  v4r3    Event
use LinkerEvent v3r2    Event
use TrackEvent  v4r10   Event
use PackedEvent v3r2    Event
use VeloEvent   v16r2   Event
use HltEvent    v8r6    Event

private
use RELAX       v*      LCG_Interfaces

#---- Include relevant RELAX dictionaries into LHCB reflex.rootmap
pattern copy_relax_rootmap \
  action copy_relax_rootmap<dict> '$(merge_rootmap_cmd) --do-merge -i $(RELAX_home)/lib/lib<dict>Rflx.pamtoor -m $(CMTINSTALLAREA)/$(tag)/lib/reflex.rootmap' \
         WIN32                    'python $(merge_rootmap_cmd) --do-merge -i $(RELAX_home)/lib/<dict>Rflx.pamtoor -m $(CMTINSTALLAREA)/$(tag)/lib/reflex.rootmap' ;\
  macro_append constituents  " copy_relax_rootmap<dict> "


copy_relax_rootmap dict=CLHEP
copy_relax_rootmap dict=HepMC
copy_relax_rootmap dict=STL
copy_relax_rootmap dict=Math
