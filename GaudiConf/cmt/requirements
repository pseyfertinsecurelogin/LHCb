package GaudiConf
version v12r6

branches doc cmt options python src
include_path none

use GaudiPolicy v*
use LHCbKernel  v* Kernel # for LHCbConfigurableUser inheritance
use DDDB        v* Det    # needed by configurable

ignore_pattern package_stamps

set STDOPTS    $(GaudiConf_root)/options

macro_append cppflags ' -DAPPNAME=\"${package}\" -DAPPVERS=\"${version}\" '

macro GaudiConfConfUserModules "GaudiConf.DigiConf GaudiConf.DstConf GaudiConf.Configuration"
apply_pattern install_python_modules
apply_pattern install_scripts

