package           GaudiConf
version           v15r5

branches doc cmt options python src tests
include_path none

use GaudiPolicy v*
use LHCbKernel  v* Kernel # for LHCbConfigurableUser inheritance
use DDDB        v* Det    # needed by configurable
use XMLSummaryKernel   v* Kernel    # needed for inheritance

ignore_pattern package_stamps

set STDOPTS    $(GaudiConf_root)/options

macro_append cppflags ' -DAPPNAME=\"${package}\" -DAPPVERS=\"${version}\" '

macro GaudiConfConfUserModules "GaudiConf.Configuration GaudiConf.SimConf GaudiConf.DigiConf GaudiConf.CaloPackingConf GaudiConf.DstConf"
apply_pattern install_python_modules
apply_pattern install_scripts

#QM tests
private
# Uses only needed to set up run time environment of tests
  macro HepMC_use "" QMTest "HepMC  v*  LCG_Interfaces"
  macro RELAX_use "" QMTest "RELAX  v*  LCG_Interfaces"
  macro GaudiPoolDb_use "" QMTest "GaudiPoolDb  v*"
  use $(HepMC_use)
  use $(RELAX_use)
  use $(GaudiPoolDb_use)
  apply_pattern QMTest
end_private
