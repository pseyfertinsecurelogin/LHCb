package           TfKernel
version           v2r1
#============================================================================

#============================================================================
# Structure, i.e. directories to process. 
#============================================================================
branches          cmt doc TfKernel dict
#============================================================================

#============================================================================
# Used packages.
#============================================================================
use     DAQEvent        v*      Event
use     RecEvent        v*      Event
use     OTDet           v*      Det
use     STDet           v*      Det
use     VeloDet         v*      Det
use     GaudiAlg        v*
use     LoKiCore        v*      Phys
use     OTDAQ           v*      OT
#============================================================================

#============================================================================
# Install public includes
#============================================================================
apply_pattern install_more_includes more=TfKernel
#============================================================================

#============================================================================
# Linker library building rule
#============================================================================
#library          TfKernelLib    ../src/Lib/*.cpp 
#apply_pattern    linker_library library=TfKernelLib
#============================================================================

#============================================================================
# LCG Dictionaries
#============================================================================
apply_pattern reflex_dictionary                                      \
              dictionary=TfKernel                                    \
              headerfiles=$(TFKERNELROOT)/dict/TfKernelDict.h        \
              selectionfile=$(TFKERNELROOT)/dict/TfKernelDict.xml    \
              options="-U__MINGW32__ -DBOOST_DISABLE_ASSERTS"
# Hack for cmt v1r19 bug to link dictionary on windows
macro TfKernelDict_use_linkopts $(use_linkopts)
#============================================================================
