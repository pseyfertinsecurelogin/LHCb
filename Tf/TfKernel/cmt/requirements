#============================================================================
# Created    : 2007-08-13
# Maintainer : Tracking 'A-Team' for the moment ... Then someone else.
#============================================================================
package           TfKernel
version           v2r11p1
#============================================================================

#============================================================================
# Structure, i.e. directories to process. 
#============================================================================
branches          cmt doc TfKernel dict
#============================================================================

#============================================================================
# Used packages.
#============================================================================
use     DAQEvent        v*      Event
use     RecEvent        v*      Event
use     OTDet           v*      Det
use     STDet           v*      Det
use     VeloDet         v*      Det
use     GaudiAlg        v*
use     LoKiCore        v*      Phys
use     OTDAQ           v*      OT
#============================================================================

# Install public includes
#============================================================================
apply_pattern install_more_includes more=TfKernel

# LCG Dictionaries
#============================================================================
apply_pattern reflex_dictionary                                      \
              dictionary=TfKernel                                    \
              headerfiles=$(TFKERNELROOT)/dict/TfKernelDict.h        \
              selectionfile=$(TFKERNELROOT)/dict/TfKernelDict.xml    \
              options="-U__MINGW32__ -DBOOST_DISABLE_ASSERTS"

# Hack for Gaudi v21r1 to link dictionary on windows
private
set EXPORT_ALL_SYMBOLS "yes" GAUDI_V21 "" GAUDI_V22 "" G21_HIDE_SYMBOLS ""
