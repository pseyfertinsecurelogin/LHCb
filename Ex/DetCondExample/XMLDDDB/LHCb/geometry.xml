<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE DDDB SYSTEM "../DTD/geometry.dtd">

<DDDB>

  <catalog name="LHCb">      <!-- LHCb detector geometry  catalog -->
    <logvol name="lvLHCb" material="Vacuum">
      <box name  = "caveBox" 
	   sizeX = "50000*mm" 
	   sizeY = "50000*mm" 
	   sizeZ = "50000*mm" />
      
      <physvol name="UpstreamRegion"
	       logvol="/dd/Geometry/UpstreamRegion/lvUpstreamRegion">
         <posXYZ z="UpstreamZPos" />
      </physvol>
      
      <physvol name="BeforeMagnetRegion"
	       logvol="/dd/Geometry/BeforeMagnetRegion/lvBeforeMagnetRegion">
         <posXYZ z="BeforeMagnetZPos" />
      </physvol>

      <physvol name="MagnetRegion"
	       logvol="/dd/Geometry/MagnetRegion/lvMagnetRegion">
         <posXYZ z="MagnetRegionZPos" />
      </physvol>

      <physvol name="AfterMagnetRegion"
	       logvol="/dd/Geometry/AfterMagnetRegion/lvAfterMagnetRegion">
	<posXYZ z="AfterMagnetZPos" />
      </physvol>

      <physvol name="DownstreamRegion"
               logvol="/dd/Geometry/DownstreamRegion/lvDownstreamRegion">
        <posXYZ z="DownstreamZPos" />
      </physvol>

    </logvol>  
  </catalog>

</DDDB>
