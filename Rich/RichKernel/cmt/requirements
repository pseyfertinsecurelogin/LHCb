package RichKernel
version v7r6

# ================ structure =================================================
branches RichKernel cmt dict doc src

# ================ dependencies ==============================================
use DetDesc            v*   Det
use DAQEvent           v*   Event
use LHCbKernel         v*   Kernel
use GaudiAlg           v*
use Boost              v*   LCG_Interfaces

# ================ environment ===============================================
apply_pattern install_more_includes more=RichKernel

# ================ linker library ============================================
library RichKernel ../src/*.cpp
apply_pattern linker_library library=RichKernel

# =============== LCG Dictionaries ============================================
apply_pattern reflex_dictionary                                       \
              dictionary=RichKernel                                   \
              headerfiles=$(RICHKERNELROOT)/dict/RichKernelDict.h     \
              selectionfile=$(RICHKERNELROOT)/dict/RichKernelDict.xml \
              options="-U__MINGW32__"

# Hack for cmt v1r19 bug to link dictionary on windows
macro RichKernelDict_use_linkopts $(use_linkopts)

# Debug flag
macro_append cppflags "" \
          Linux&debug " -DRICHDEBUG "
