// local
#include "RichRecBase/RichRecBase.h"

//=============================================================================
// Standard constructor
//=============================================================================
template <class PBASE>
Rich::Rec::CommonBase<PBASE>::CommonBase( PBASE * base )
  : m_base          ( base ),
    m_pixTool       ( NULL ),
    m_tkTool        ( NULL ),
    m_segTool       ( NULL ),
    m_photTool      ( NULL ),
    m_statTool      ( NULL ),
    m_trackCrName   ( "RichTrackCreator"   ),
    m_pixelCrName   ( "RichPixelCreator"   ),
    m_segmentCrName ( "RichSegmentCreator" ),
    m_photonCrName  ( "RichPhotonCreator"  ),
    m_statusCrName  ( "RichStatusCreator"  )
{
  base->declareProperty( "ProcStatusLocation",
                         m_procStatLocation = LHCb::ProcStatusLocation::Default );
}
//=============================================================================

//=============================================================================
// Initialisation
//=============================================================================
template <class PBASE>
StatusCode Rich::Rec::CommonBase<PBASE>::initialiseRichReco()
{
  return StatusCode::SUCCESS;
}
//=============================================================================

//=============================================================================
// Finalisation
//=============================================================================
template <class PBASE>
StatusCode Rich::Rec::CommonBase<PBASE>::finaliseRichReco()
{
  return StatusCode::SUCCESS;
}
