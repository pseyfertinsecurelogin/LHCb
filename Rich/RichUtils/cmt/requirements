#=====================================================================
# Created    : 2003-11-06
# Maintainer : Christopher Rob Jones
#=====================================================================

package           RichUtils
version           v1r0

# ================ structure ==============================================
branches RichUtils cmt dict doc src

# ================ dependencies ===========================================
use DAQEvent           v*   Event
use LHCbKernel         v*   Kernel
use GaudiUtils         v*
use vdt                v*   LCG_Interfaces
use Boost              v*   LCG_Interfaces
use AIDA               v*   LCG_Interfaces
private
use GaudiObjDesc       v* -no_auto_imports
end_private

# ================ environment ============================================
apply_pattern install_more_includes more=RichUtils

# ================ linker library ============================================
library RichUtilsLib ../src/*.cpp
apply_pattern linker_library library=RichUtils

# =============== LCG Dictionaries ==========================================
apply_pattern reflex_dictionary                                     \
              dictionary=RichUtils                                  \
              headerfiles=$(RICHUTILSROOT)/dict/RichUtilsDict.h     \
              selectionfile=$(RICHUTILSROOT)/dict/RichUtilsDict.xml \
              options="-U__MINGW32__"
# Disable some compiler warnings in the automatically generated dict code
macro_append RichUtilsDict_cppflags "" \
                          target-icc " -wd177 -wd873"

