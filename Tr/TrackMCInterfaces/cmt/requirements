package           TrackMCInterfaces
version           v3r0

# Structure, i.e. directories to process. 
#============================================================================
branches          cmt doc TrackMCInterfaces

# =============== dependencies ==============================================
use GaudiKernel      v*

# =============== include directories =======================================
apply_pattern install_more_includes more=TrackMCInterfaces

# =============== LCG Dictionaries ============================================
apply_pattern reflex_dictionary                                                 \
              dictionary=TrackMCInterfaces                                      \
              headerfiles=$(TRACKMCINTERFACESROOT)/dict/TrackMCInterfacesDict.h \
              selectionfile=$(TRACKMCINTERFACESROOT)/dict/TrackMCInterfacesDict.xml \
              options="-U__MINGW32__"

# Hack for cmt v1r19 bug to link dictionary on windows
macro TrackMCInterfacesDict_use_linkopts $(use_linkopts)
