package Kernel/LHCbMath
version v1r3

#============================================================================
# Structure, i.e. directories to process. 
#============================================================================

branches cmt doc LHCbMath src

include_path none
include_dirs $(LHCBMATHROOT) $(ROOT_home)/include

#============================================================================
# Used packages
#============================================================================
use GaudiKernel     v*
use ROOT            v*      LCG_Interfaces -no_auto_imports
use GSL             v*      LCG_Interfaces

macro LHCbMath_linkopts  " -L$(ROOT_home)/lib  -lMathCore -lSmatrix " \
         WIN32  " /LIBPATH:$(ROOT_home)/lib libMathCore.lib libSmatrix.lib "

# ================= constituens: linker library ===============================
library             LHCbMath    *.cpp

# ================= patterns ==================================================
apply_pattern       linker_library library=LHCbMath

#============================================================================