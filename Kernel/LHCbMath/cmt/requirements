package Kernel/LHCbMath
version v2r5

#============================================================================
# Structure, i.e. directories to process. 
#============================================================================

branches cmt doc LHCbMath src

#============================================================================
# Used packages
#============================================================================
use GaudiKernel     v*
use ROOT            v*      LCG_Interfaces -no_auto_imports
use GSL             v*      LCG_Interfaces

apply_pattern install_more_includes more=LHCbMath

macro_append LHCbMath_linkopts  " -L$(ROOT_home)/lib  -lMathCore " \
                         WIN32  " /LIBPATH:$(ROOT_home)/lib libMathCore.lib "

# ================= constituents: linker library ============================
library             LHCbMath    *.cpp

# ================= patterns ================================================
apply_pattern       linker_library library=LHCbMath

#============================================================================
