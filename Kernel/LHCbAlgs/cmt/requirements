package           LHCbAlgs
version           v2r44

#============================================================================
# Structure, i.e. directories to process.
#============================================================================
branches        cmt doc src tests
include_path    none

#============================================================================
# Used packages.
#============================================================================
use GaudiAlg   v*
use LHCbKernel v* Kernel -no_auto_imports
use DAQEvent   v* Event
use RecEvent   v* Event
use DetDesc    v* Det
use HltInterfaces v* Kernel -no_auto_imports

#============================================================================
# Component library building rule
#============================================================================
library LHCbAlgs ../src/*.cpp -import=LHCbKernel -import=HltInterfaces

#============================================================================
# define component library link options
#============================================================================
apply_pattern   component_library library=LHCbAlgs

#============================================================================
# Testing infrastructure
#============================================================================
apply_pattern   QMTest
# dependencies for tests
private
use DetDescSvc v* Det -no_auto_imports
use DetCond    v* Det -no_auto_imports
use SQLDDDB    v* Det -no_auto_imports
use sqlite     v* LCG_Interfaces -no_auto_imports
end_private
