package           RecInterfaces
version           v1r0p1

#============================================================================
# Structure, i.e. directories to process. 
#============================================================================
branches          cmt doc dict Kernel
#============================================================================
# Used packages. 
#============================================================================
use  GaudiKernel      v*

include_path      none
# =============== include directories =======================================
apply_pattern install_more_includes more=Kernel

# =============== LCG Dictionaries ============================================
apply_pattern reflex_dictionary                                             \
              dictionary=RecInterfaces                                      \
              headerfiles=$(RECINTERFACESROOT)/dict/RecInterfacesDict.h     \
              selectionfile=$(RECINTERFACESROOT)/dict/RecInterfacesDict.xml \
              options="-U__MINGW32__"

# Hack for Gaudi v21r1 to link dictionary on windows
private
set EXPORT_ALL_SYMBOLS "yes" GAUDI_V21 "" GAUDI_V22 "" G21_HIDE_SYMBOLS ""