# =============================================================================
package HistoStrings
author  Vanya Belyaev 

version           v1r4

# ============================================================================
branches cmt doc Kernel src dict python

# ============================================================================
use GaudiKernel     v*
use GaudiUtils      v*
use AIDA            v* LCG_Interfaces
use Boost           v* LCG_Interfaces
use ROOT            v* LCG_Interfaces

# =============================================================================
apply_pattern  install_more_includes  more=Kernel 
apply_pattern  install_python_modules 

# =============================================================================
library HistoStrings  *.cpp   
        
# ================ Produce LCG dictionary =====================================
apply_pattern      reflex_dictionary                                         \
                   dictionary=HistoStrings                                   \
                   headerfiles=$(HISTOSTRINGSROOT)/dict/HistoStringsDict.h   \
                   selectionfile=$(HISTOSTRINGSROOT)/dict/HistoStrings.xml   \
                   options=" -U__MINGW32__ "
                        
macro_append       HistoStringDict_dependencies    " HistoStrings " 

# ============================================================================
apply_pattern linker_library    library=HistoStrings 



macro_append ROOT_linkopts " -lHist -lXMLIO " \
             target-winxp  " libHist.lib libXMLIO.lib " \
             target-mac104 " -lHist -lXMLIO -lMatrix "

# ============================================================================
# The END 
# ============================================================================
