macro LHCbDefinitions_linkopts  " -L$(ROOT_home)/lib  -lMathCore -lSmatrix " \
         WIN32  " /LIBPATH:$(ROOT_home)/lib libMathCore.lib libSmatrix.lib "
#============================================================================
