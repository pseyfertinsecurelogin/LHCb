package LHCbDefinitions
version v1r7

# Structure, i.e. directories to process. 
#============================================================================
branches          cmt doc Kernel

# Include directories
#============================================================================
include_path none
include_dirs $(LHCBDEFINITIONSROOT) $(ROOT_home)/include

# Used packages. 
#============================================================================
